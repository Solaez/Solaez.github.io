[Version]
Signature = "$WINDOWS NT$"
Class = %ClassName%  
ClassGuid = {2B959C9D-A4ED-4464-809D-0F1118CF055D}
Provider = %ManufacturerName%
CatalogFile = igfilter.cat
DriverVer = 07/17/2021,1.1.0.0
PnpLockdown = 1
 

[SourceDisksNames]
1 = %DiskName%,,,""

[SourceDisksFiles]
nssmkig.sys  = 1,,

[DestinationDirs]
DefaultDestDir = 12
Nssmkig.DriverFiles = 12

[DefaultInstall.NTx86]
OptionDesc = %NssmkigServiceDesc%
CopyFiles = Nssmkig.DriverFiles

[DefaultUninstall.NTx86]
LegacyUninstall = 1

[Nssmkig.DriverFiles]
nssmkig.sys

[DefaultInstall.NTx86.Services]
AddService = %NssmkigServiceName%,,Nssmkig.Service

[Nssmkig.Service]
DisplayName    = %NssmkigServiceName%
Description    = %NssmkigServiceDesc%
ServiceBinary  = %12%\Nssmkig.sys
ServiceType    = 1 ;    SERVICE_KERNEL_DRIVER
StartType      = 3 ;    SERVICE_DEMAND_START
ErrorControl   = 1 ;    SERVICE_ERROR_NORMAL
 
[Strings]
ManufacturerName = "Nefarius Software Solutions e.U." 
ClassName = "Nefarius HID Devices"
DiskName = "nssmkig Installation Disk"
NssmkigServiceDesc = "Nefarius HID Devices filter driver"
NssmkigServiceName = "nssmkig"
